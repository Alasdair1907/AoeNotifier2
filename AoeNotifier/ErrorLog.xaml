<Window x:Class="AoeNotifier.ErrorLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AoeNotifier"
        mc:Ignorable="d"
        Title="Error Log" Height="510" Width="800" ResizeMode="NoResize">
    <StackPanel Background="#5d6b99">
        <Border Width="780" Height="460" Background="White" Margin="5, 5, 5, 5">
            <StackPanel>
                <TextBox Width="700" Height="400" Background="White" Margin="10,10,10,0" Text="{Binding ErrorLogText}" />
                <TextBlock FontSize="10" Foreground="Gray" Margin="40, 2,0,5">These errors have occured during automatic lobby refreshes</TextBlock>
                <Button Content="Close" Width="200" Click="CloseButton_Click"  Name="CloseButton"></Button>
            </StackPanel>
            
        </Border>
        
    </StackPanel>
</Window>
